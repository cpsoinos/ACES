<div class="container registration">
  <div class="page-header"><h1>Users</h1></div>
  <div class="row">
    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= button_to "Edit", edit_user_path(user), method: :get, class: "admin-buttons" %></td>
          <td><%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "admin-buttons" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
