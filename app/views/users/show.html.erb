<div class="container registration">
  <div class="page-header"><h1><%= @user.name %></h1></div>
  <div class="row">
    <div class='col-sm-4'>
      <%= image_tag(@user.avatar.thumb.url, class: "top-picks") %><br />
    </div>
    <div class='col-sm-4'>
      <ul class="list-group">
        <li class="list-group-item">Member since: <%= @user.created_at %></li>
        <li class="list-group-item"><%= mail_to(@user.email) %></li>
      </ul>
      <% if current_user.admin? %>
        <%= button_to "Edit user", edit_user_path(@user), method: :get %>
      <% else %>
        <%= button_to "Edit account", edit_user_registration_path(@user), method: :get %>
      <% end %>
    </div>
    <div class='col-sm-4'>
      <% @user.reviews.each do |review| %>
    <div class="review-border">
      Review of: <%= link_to review.restaurant.name, restaurant_path(review.restaurant.id) %>
      <br /><br />
      <p><%= review.body %></p>
    </div>
     <% end %>
    </div>

  </div>
</div>
